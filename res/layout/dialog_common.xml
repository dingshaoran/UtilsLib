<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".util.AlertDialogUtils" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/umeng_socialize_button_white"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent" >
        <!-- title -->
        <TextView
            android:id="@+id/alertdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="title"
            android:textColor="#595959"
            android:textSize="17sp"
            android:visibility="gone" />
        <!-- titleline -->
        <View
            android:id="@+id/alertdialog_title_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E4E4E4"
            android:visibility="gone" />
        <!-- body -->
        <RelativeLayout
            android:id="@+id/alertdialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <!-- listbody -->
            <LinearLayout
                android:id="@+id/alertdialog_body_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <!-- contentBody -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" >
                <TextView
                    android:id="@+id/alertdialog_body_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:text="content"
                    android:textColor="#4C4C4C"
                    android:textSize="17sp" />
                <FrameLayout
                    android:id="@+id/alertdialog_body_subcontent_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alertdialog_body_content"
                    android:paddingBottom="15dp" >
                    <TextView
                        android:id="@+id/alertdialog_body_subcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="#979797"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/alertdialog_body_edit_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/alertdialog_body_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/umeng_socialize_button_grey"
                    android:visibility="gone" >
                    <TextView
                        android:id="@+id/alertdialog_body_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#ff7"
                        android:textSize="15dp"
                        tools:ignore="SpUsage" />
                    <EditText
                        android:id="@+id/alertdialog_body_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@id/alertdialog_body_unit"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:numeric="decimal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#ff7"
                        android:textSize="15dp"
                        tools:ignore="Deprecated,SpUsage" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tip_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alertdialog_body_edit_rl"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#f00"
                    android:textSize="12sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tip_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alertdialog_body_edit_rl"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="3dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#999"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- bodyline -->
        <View
            android:id="@+id/alertdialog_body_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E4E4E4" />
        <!-- bottom -->
        <LinearLayout
            android:id="@+id/alertdialog_bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="gone" >
            <TextView
                android:id="@+id/alertdialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="cancel"
                android:textColor="#868686"
                android:textSize="16sp" />
            <View
                android:id="@+id/alertdialog_bottom_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />
            <TextView
                android:id="@+id/alertdialog_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="confirm"
                android:textColor="#FF7C00"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>